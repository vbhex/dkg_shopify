{
  "name": "dkg-shopify-app",
  "version": "1.0.0",
  "description": "Shopify app for DeakeeGroup Token (DKG) holders to receive exclusive discounts",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server/index.js",
    "start": "node server/index.js",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "setup": "npm install && cd client && npm install"
  },
  "keywords": [
    "shopify",
    "app",
    "blockchain",
    "token",
    "discount",
    "DKG"
  ],
  "author": "DeakeeGroup",
  "license": "MIT",
  "dependencies": {
    "@shopify/shopify-api": "^9.0.0",
    "@shopify/shopify-app-express": "^3.0.0",
    "@shopify/shopify-app-session-storage-sqlite": "^2.0.0",
    "@prisma/client": "^5.5.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

