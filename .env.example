# Shopify App Credentials
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_API_SCOPES=write_products,write_customers,write_discounts,read_orders
SHOPIFY_APP_URL=https://group.deakee.com
SHOPIFY_API_VERSION=2024-01

# Server Configuration
PORT=6100
NODE_ENV=development
HOST=localhost

# Database
# For development (SQLite)
DATABASE_URL=file:./dev.db
# For production (PostgreSQL) - uncomment and configure:
# DATABASE_URL=postgresql://user:password@host:5432/database

# Blockchain Configuration
# DKG Token Contract Address (ERC-20)
DKG_TOKEN_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
# Ethereum RPC URL (Infura, Alchemy, or your own node)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
# Support multiple chains if needed
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed1.binance.org

# Session Configuration
# Generate with: openssl rand -base64 32
SESSION_SECRET=your_random_session_secret_here

# App Configuration
# Minimum DKG tokens required for discount eligibility
MIN_DKG_TOKENS=100
